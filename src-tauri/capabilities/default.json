{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/**/*" },
        { "path": "$TEMP/**/*" }
      ]
    },
    "fs:allow-read-file",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/**/*" },
        { "path": "$TEMP/**/*" }
      ]
    },
    "dialog:default"
  ]
}
